@page
@model AppNetRazor.Pages.Cursos.CrearModel
@{
    ViewData["Title"] = "Crear Nuevo Curso";
}

<h3 class="text-center">ERICK ALDAIR BARCENAS GONZALEZ</h3>


<div class="card">
    <div class="card-header">
        <h2 class="text-info">CREAR NUEVO CURSO</h2>

    </div>

    <div class="card-body">

        <form method="post">

            <div asp-asp-validation-summary="ModelOnly" class="text-danger">
                <div class="container" style="padding:30px">

                    <div class=form-group>
                        <div class="row">
                            <div class="col-sm-2">
                                <label asp-for="Curso.NombreCurso"></label>
                            </div>
                            <div class="col-sm-6">
                                <input asp-for="Curso.NombreCurso" class="form-control" />
                            </div>
                            <span asp-validation-for="Curso.NombreCurso" class="text-danger"></span>
                        </div>
                    </div>


                    <div class=form-group>
                        <div class="row">
                            <div class="col-sm-2">
                                <label asp-for="Curso.CantidadClases"></label>
                            </div>
                            <div class="col-sm-6">
                                <input asp-for="Curso.CantidadClases" class="form-control" />
                            </div>
                            <span asp-validation-for="Curso.CantidadClases" class="text-danger"></span>
                        </div>
                    </div>


                    <div class=form-group>
                        <div class="row">
                            <div class="col-sm-2">
                                <label asp-for="Curso.Precio"></label>
                            </div>
                            <div class="col-sm-6">
                                <input asp-for="Curso.Precio" class="form-control" />
                            </div>
                            <span asp-validation-for="Curso.Precio" class="text-danger"></span>
                        </div>
                    </div>

                    <div class=form-group>
                        <div class="row">
                            <div class="col-sm-2 offset-sm-2">
                                <input type="submit" value="Crear" class="btn btn-primary form-control" />
                            </div>
                            <div class="col-sm-4">
                               <a asp-page="Index" class="btn btn-success form-control">VOLVER A LISTA</a>
                            </div>
                            <span asp-validation-for="Curso.Precio" class="text-danger"></span>
                        </div>
                    </div>



                </div>
            </div>
        </form>
    </div>
</div>